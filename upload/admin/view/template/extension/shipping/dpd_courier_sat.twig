{{ header }}{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-dpd-courier-sat" class="btn btn-primary" data-toggle="tooltip" title="{{ button_save }}" ><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}"  class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>

      <h1>{{ heading_title }}</h1>

      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-dpd-courier-sat" class="form-horizontal">
          <div class="row">
            <div class="col-sm-2">
              <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
                {% for geo_zone in geo_zones %}
                  <li><a href="#tab-geo-zone{{ geo_zone['geo_zone_id'] }}" data-toggle="tab">{{ geo_zone['name'] }}</a></li>
                {% endfor %}
              </ul>
            </div>

            <div class="col-sm-10">
              <div class="tab-content">
                <div class="tab-pane active" id="tab-general">
                  {% for language in languages %}
                    <div class="tab-pane" id="language{{ language['code'] }}">
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-title{{ language['code'] }}">{{ entry_title }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="shipping_dpd_courier_sat_title[{{ language.code }}]" id="input-title{{ language['code'] }}" class="form-control" value="{{ shipping_dpd_courier_sat_title[language['code']] ? shipping_dpd_courier_sat_title[language['code']] : '' }}" />
                        </div>
                      </div>
                    </div>
                  {% endfor %}

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-tax-class">{{ entry_tax_class }}</label>
                    <div class="col-sm-10">
                      <select name="shipping_dpd_courier_sat_tax_class_id" id="input-tax-class" class="form-control">
                        <option value="0">{{ text_none }}</option>
                        {% for tax_class in tax_classes %}
                          {% if tax_class['tax_class_id'] == shipping_dpd_courier_sat_tax_class_id %}
                            <option value="{{ tax_class['tax_class_id'] }}" selected="selected">{{ tax_class['title'] }}</option>
                          {% else %}
                            <option value="{{ tax_class['tax_class_id'] }}">{{ tax_class['title'] }}</option>
                          {% endif %}
                        {% endfor %}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{ entry_cod_status }}</label>
                    <div class="col-sm-10">
                      <select name="shipping_dpd_courier_sat_cod_status" id="input-cod-status" class="form-control">
                        {% if shipping_dpd_courier_sat_cod_status %}
                          <option value="1" selected="selected">{{ text_enabled }}</option>
                          <option value="0">{{ text_disabled }}</option>
                        {% else %}
                          <option value="1">{{ text_enabled }}</option>
                          <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_monday }} {{ help_day }}</label>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_mon_pickup[1][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_mon_pickup[1]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_mon_pickup[1][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_mon_pickup[1]['until'] }}">
                      </div>
                    </div>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_mon_pickup[2][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_mon_pickup[2]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_mon_pickup[2][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_mon_pickup[2]['until'] }}">
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_tuesday }} {{ help_day }}</label>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_tue_pickup[1][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_tue_pickup[1]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_tue_pickup[1][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_tue_pickup[1]['until'] }}">
                      </div>
                    </div>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_tue_pickup[2][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_tue_pickup[2]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_tue_pickup[2][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_tue_pickup[2]['until'] }}">
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_wednesday }} {{ help_day }}</label>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_wed_pickup[1][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_wed_pickup[1]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_wed_pickup[1][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_wed_pickup[1]['until'] }}">
                      </div>
                    </div>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_wed_pickup[2][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_wed_pickup[2]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_wed_pickup[2][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_wed_pickup[2]['until'] }}">
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_thursday}} {{ help_day }}</label>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_thu_pickup[1][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_thu_pickup[1]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_thu_pickup[1][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_thu_pickup[1]['until'] }}">
                      </div>
                    </div>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_thu_pickup[2][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_thu_pickup[2]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_thu_pickup[2][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_thu_pickup[2]['until'] }}">
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_friday }} {{ help_day }}</label>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_fri_pickup[1][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_fri_pickup[1]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_fri_pickup[1][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_fri_pickup[1]['until'] }}">
                      </div>
                    </div>

                    <div class="col-sm-5">
                      <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">{{ text_from }}</span>
                        <input name="shipping_dpd_courier_sat_fri_pickup[2][from]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_fri_pickup[2]['from'] }}">
                        
                        <span class="input-group-addon" id="basic-addon1">{{ text_until }}</span>
                        <input name="shipping_dpd_courier_sat_fri_pickup[2][until]" type="text" class="form-control time" value="{{ shipping_dpd_courier_sat_fri_pickup[2]['until'] }}">
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">{{ entry_status_per_day }}</label>
                    <div class="col-sm-10">
                      <div class="well well-sm" style="height: 170px; overflow: auto;">
                        {% for key,day in weekdays %}
                          <div class="checkbox">
                            {% set replace_value_var= ':' %}
                            {% set replace_with_value_var = '' %} 
                            <label>
                              {% if key in status_per_day %}
                                <input type="checkbox" name="shipping_dpd_courier_sat_weekdays[]" value="{{ key }}" checked />
                                {{ day|replace({ (replace_value_var): replace_with_value_var }) }}
                              {% else %}
                                <input type="checkbox" name="shipping_dpd_courier_sat_weekdays[]" value="{{ key }}" />
                                {{ day|replace({ (replace_value_var): replace_with_value_var }) }}
                              {% endif %}
                            </label>
                          </div>
                        {% endfor %}
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                    <div class="col-sm-10">
                      <select name="shipping_dpd_courier_sat_status" id="input-status" class="form-control">
                        {% if shipping_dpd_courier_sat_status %}
                          <option value="1" selected="selected">{{ text_enabled }}</option>
                          <option value="0">{{ text_disabled }}</option>
                        {% else %}
                          <option value="1">{{ text_enabled }}</option>
                          <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="shipping_dpd_courier_sat_sort_order" value="{{ shipping_dpd_courier_sat_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                    </div>
                  </div>
                </div>

                {% for geo_zone in geo_zones %}
                  <div class="tab-pane" id="tab-geo-zone{{ geo_zone['geo_zone_id'] }}">
                    {% if price_calculation_method == 'weight' %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-rate{{ geo_zone['geo_zone_id'] }}"><span data-toggle="tooltip" title="{{ help_rate }}">{{ entry_rate }}</span></label>
                        <div class="col-sm-10">
                          <textarea name="shipping_dpd_courier_sat_{{ geo_zone['geo_zone_id'] }}_rate" rows="5" placeholder="{{ entry_rate }}" id="input-rate{{ geo_zone['geo_zone_id'] }}" class="form-control">{{ shipping_dpd_courier_sat_geo_zone_rate[geo_zone.geo_zone_id] ? shipping_dpd_courier_sat_geo_zone_rate[geo_zone.geo_zone_id] }}</textarea>
                        </div>
                      </div>
                    {% else %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-rate{{ geo_zone['geo_zone_id'] }}">{{ entry_price }}</span></label>
                        <div class="col-sm-10">
                          <input name="shipping_dpd_courier_sat_{{ geo_zone['geo_zone_id'] }}_price" id="input-rate{{ geo_zone['geo_zone_id'] }}" class="form-control" value="{{ shipping_dpd_courier_sat_geo_zone_price[geo_zone.geo_zone_id] ? shipping_dpd_courier_sat_geo_zone_price[geo_zone.geo_zone_id] }}" />
                        </div>
                      </div>
                    {% endif %}

                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-free-shipping{{ geo_zone['geo_zone_id'] }}">{{ entry_free_shipping }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="shipping_dpd_courier_sat_{{ geo_zone.geo_zone_id }}_free_shipping_from" placeholder="{{ entry_free_shipping }}" value="{{ shipping_dpd_courier_sat_geo_zone_free_shipping_from[geo_zone.geo_zone_id] ? shipping_dpd_courier_sat_geo_zone_free_shipping_from[geo_zone.geo_zone_id] }}" id="input-free-shipping{{ geo_zone['geo_zone_id'] }}" class="form-control" />
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-status{{ geo_zone['geo_zone_id'] }}">{{ entry_status }}</label>
                      <div class="col-sm-10">
                        <select name="shipping_dpd_courier_sat_{{ geo_zone.geo_zone_id }}_status" id="input-status{{ geo_zone['geo_zone_id'] }}" class="form-control">
                          {% if shipping_dpd_courier_sat_geo_zone_status[geo_zone.geo_zone_id] == 1 %}
                            <option value="1" selected="selected">{{ text_enabled }}</option>
                            <option value="0">{{ text_disabled }}</option>
                          {% else %}
                            <option value="1">{{ text_enabled }}</option>
                            <option value="0" selected="selected">{{ text_disabled }}</option>
                          {% endif %}
                        </select>
                      </div>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  $('.time').datetimepicker({
    format: 'HH:mm',
    pickDate: false
  });
</script>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">

